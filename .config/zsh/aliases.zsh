# movement
alias ~="cd ~"
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# better ls with exa
alias ll='eza -1 --colour=always --icons=always -a -l --no-permissions --total-size --no-user --time-style='+%d-%m-%y %H:%M''
alias la='eza -1 --colour=always --icons=always -a'

# useful
alias .zshrc='source ~/.zshrc'
alias nv='nvim'
